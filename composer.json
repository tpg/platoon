{
    "name": "thepublicgood/platoon",
    "description": "Zero-downtime deployment tools",
    "license": "MIT",
    "authors": [
        {
            "name": "THEPUBLICGOOD",
            "email": "makers@thepublicgood.dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "TPG\\Platoon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPG\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "laravel/envoy": "^2.10",
        "laravel/framework": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TPG\\Platoon\\PlatoonServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
