{
    "name": "thepublicgood/platoon",
    "description": "Zero-downtime deployment tools",
    "license": "MIT",
    "authors": [
        {
            "name": "THEPUBLICGOOD",
            "email": "makers@thepublicgood.dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "TPG\\Platoon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPG\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "laravel/envoy": "^2.8",
        "laravel/framework": "^9.16",
        "spatie/laravel-data": "^1.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^7.5",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TPG\\Platoon\\PlatoonServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=platoon --ansi --force"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
